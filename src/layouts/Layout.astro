---
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <Head {title} />
  <body class='flex flex-col'>
    <Header />
    <main class='flex-shrink-0 flex-grow p-6 pb-20'>
      <slot />
    </main>
  </body></html
>
